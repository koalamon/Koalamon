{
  "name": "root/dashboard.phmlabs.com",
  "license": "proprietary",
  "type": "project",
  "repositories": [
    {
      "type": "vcs",
      "url": "https://github.com/koalamon/KoalamomPlatform.git"
    }
  ],
  "minimum-stability": "dev",
  "prefer-stable": true,
  "autoload": {
    "psr-4": {
      "": "src/"
    }
  },
  "require": {
    "php": ">=5.3.9",

    "koalamon/notificationbundle": "dev-master",
    "koalamon/koalamonplatform": "dev-master",
    "koalamon/koalamonintegration": "dev-master",
    "koalamon/leankoalaplatform": "dev-master"
  },
  "require-dev": {
    "sensio/generator-bundle": "~2.3",
    "doctrine/doctrine-fixtures-bundle": "^2.3"
  },
  "scripts": {
    "post-install-cmd": [
      "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters",
      "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::buildBootstrap",
      "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::clearCache",
      "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installAssets",
      "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installRequirementsFile",
      "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::prepareDeploymentTarget"
    ],
    "post-update-cmd": [
      "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters",
      "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::buildBootstrap",
      "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::clearCache",
      "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installAssets",
      "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installRequirementsFile",
      "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::prepareDeploymentTarget"
    ]
  },
  "config": {
    "bin-dir": "bin"
  },
  "extra": {
    "symfony-app-dir": "app",
    "symfony-web-dir": "web",
    "symfony-assets-install": "relative",
    "incenteev-parameters": [
     {
         "file": "app/config/parameters.yml",
         "env-map": {
              "database_url": "JAWSDB_URL",
              "database_host": "DATABASE_HOST",
              "database_port": "DATABASE_PORT",
              "database_name": "MYSQL_DATABASE",
              "database_user": "MYSQL_USER",
              "database_password": "MYSQL_PASSWORD",
              "secret": "SYMFONY_SECRET"
         }
      },
      {
        "file": "app/config/community.yml"
      }
    ]
  }
}
